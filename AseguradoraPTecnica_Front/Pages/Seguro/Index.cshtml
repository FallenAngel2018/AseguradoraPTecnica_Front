@page
@model AseguradoraPTecnica_Front.Pages.Seguro.SeguroIndexModel
@{
    ViewData["Title"] = "Seguros";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Lista de Seguros</h2>
    <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#modalAgregarSeguro">
        <i class="bi bi-plus-lg"></i> Agregar Seguro
    </button>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nombre del Seguro</th>
            <th>Código del Seguro</th>
            <th>Suma Asegurada</th>
            <th>Prima</th>
            <th>Edad mín.</th>
            <th>Edad máx.</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Seguros != null && Model.Seguros.Any())
        {
            foreach (var seguro in Model.Seguros)
            {
                <tr>
                    <td>@seguro.NombreSeguro</td>
                    <td>@seguro.Codigo</td>
                    <td>@seguro.SumaAsegurada?.ToString("C")</td>
                    <td>@seguro.Prima?.ToString("C")</td>
                    <td>@seguro.EdadMinima</td>
                    <td>@seguro.EdadMaxima</td>
                    <td>@(seguro.Estado == 1 ? "Activo" : "Inactivo")</td>
                    <td>
                        <a asp-page="/Seguros/Edit" asp-route-id="@seguro.IdSeguro" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <button class="btn btn-sm btn-danger" onclick="eliminarSeguro(@seguro.IdSeguro)">
                            <i class="bi bi-trash"></i> Eliminar
                        </button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center text-muted py-3">No hay seguros registrados</td>
            </tr>
        }
    </tbody>
</table>


<!-- Modal -->
<div class="modal fade" id="modalAgregarSeguro" tabindex="-1" aria-labelledby="modalAgregarSeguroLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="formAgregarSeguro" method="post" asp-page-handler="AgregarSeguro">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalAgregarSeguroLabel">Agregar Nuevo Seguro</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="nombreSeguro" class="form-label">Nombre del Seguro</label>
                        <input type="text" class="form-control" id="nombreSeguro" name="NombreSeguro" required />
                    </div>
                    <div class="mb-3">
                        <label for="sumaAsegurada" class="form-label">Suma Asegurada</label>
                        <input type="number" step="0.01" min="0" class="form-control" id="sumaAsegurada" name="SumaAsegurada" required />
                    </div>
                    <div class="mb-3">
                        <label for="prima" class="form-label">Prima</label>
                        <input type="number" step="0.01" min="0" class="form-control" id="prima" name="Prima" required />
                    </div>
                    <div class="mb-3">
                        <label for="edadMinima" class="form-label">Edad mínima</label>
                        <input type="number" min="0" max="120" class="form-control" id="edadMinima" name="EdadMinima" required />
                    </div>
                    <div class="mb-3">
                        <label for="edadMaxima" class="form-label">Edad máxima</label>
                        <input type="number" min="0" max="120" class="form-control" id="edadMaxima" name="EdadMaxima" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Guardar Seguro</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts
{
    <script>
        function eliminarSeguro(idSeguro) {
            if (confirm('¿Está seguro de eliminar este seguro?')) {
                // Aquí va llamada AJAX para eliminar (puedes implementar)
                alert('Eliminar seguro con Id ' + idSeguro);
            }
        }
    </script>
}
