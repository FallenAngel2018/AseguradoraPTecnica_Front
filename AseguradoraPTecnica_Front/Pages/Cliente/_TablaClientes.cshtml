@using AseguradoraPTecnica_Front.Models
@using AseguradoraPTecnica_Front.Models.Cliente
@model List<ClienteViewModel>
    
<table class="table table-striped table-hover" id="tablaClientes">
    <thead>
        <tr>
            <th>Cédula</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Teléfono</th>
            <th>Edad</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center text-muted py-4">
                    <i class="bi bi-inbox"></i>
                    <p class="mb-0">No hay clientes registrados en el sistema</p>
                    <small>Haga clic en "Nuevo Cliente" para agregar uno</small>
                </td>
            </tr>
        }
        else
        {
            foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.Cedula</td>
                    <td>@cliente.Nombres</td>
                    <td>@cliente.Apellidos</td>
                    <td>@cliente.Telefono</td>
                    <td>@cliente.Edad</td>
                    <td>
                        @if (cliente.Estado == 1)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactivo</span>
                        }
                    </td>
                    <td>
                        <button class="btn btn-sm btn-warning" onclick="editarCliente(@cliente.IdAsegurado)">
                            <i class="bi bi-pencil"></i>
                        </button>
                        <button class="btn btn-sm btn-danger" onclick="eliminarCliente(@cliente.IdAsegurado)">
                            <i class="bi bi-trash"></i>
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
